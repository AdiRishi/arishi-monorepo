{
  "extends": "@repo/typescript-config/remix-run.json",
  "compilerOptions": {
    "module": "ESNext",
    "types": ["@remix-run/cloudflare", "vite/client"],
    "baseUrl": ".", // baseUrl required for path aliases to work
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "include": [
    "remix-sitemap.config.js",
    "postcss.config.js",
    ".eslintrc.cjs",
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ]
}
